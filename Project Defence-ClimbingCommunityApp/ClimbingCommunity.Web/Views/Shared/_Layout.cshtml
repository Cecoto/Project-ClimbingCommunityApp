@using static ClimbingCommunity.Common.GeneralApplicationConstants

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Climbing Community</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha512-NskZMCWz3HWtYtN31ffTioPK/jpTCF8jwIusAbEtJJDFd6bX8fCkWsmgMdoa3bAL8IKK3SZb5gyATC2Hg8ZpLg==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClimbingCommunity.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/logo.png" alt="logo" class="logo" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        @if (!ViewContext.RouteData.Values["action"].ToString().Equals("RegisterCoach", StringComparison.OrdinalIgnoreCase) &&
                        !ViewContext.RouteData.Values["action"].ToString().Equals("RegisterClimber", StringComparison.OrdinalIgnoreCase))
                        {
                        <partial name="_LoginPartial" />
                            
                        }
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

        </div>
    </div>
</body>
<footer class="footer text-muted">

    &copy; 2023 - Climbing Community App @ReleaseYear
    @if (DateTime.UtcNow.Year != ReleaseYear)
    {
        @Html.Raw($" - {DateTime.UtcNow.Year}")
        ;
    }
    <div class="FAQ">

        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>

        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
    </div>


</footer>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js" integrity="sha512-tzsyQpP4lXe9D05ybhxQAPh6Wv1yyrtbQz1bCEKefDgXy0pxJY6m7C/8bqMNNuXHX1ojie7jTajn25Ac1pti4g==" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>


