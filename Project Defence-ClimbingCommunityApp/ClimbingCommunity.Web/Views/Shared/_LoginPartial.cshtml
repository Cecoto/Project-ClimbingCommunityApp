@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark green nav-button" asp-area="" asp-controller="Profile" asp-action="MyProfile" >Hello, @UserManager.GetUserAsync(User).Result.FirstName</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark nav-button">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark nav-button" id="register-link">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark nav-button" asp-area="" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>


