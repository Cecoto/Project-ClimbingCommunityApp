@model RegisterCoachViewModel

<link rel="stylesheet" href="~/css/RegisterView.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Register coach";
}

<h2 class="centered-heading">Register as a Coach</h2>

<form asp-action="RegisterCoach" method="post" enctype="multipart/form-data" class="register-form">
    
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" placeholder="Enter your age" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachingExperience" class="form-label"></label>
                <input asp-for="CoachingExperience" class="form-control" placeholder="Enter your coaching experience" />
                <span asp-validation-for="@Model.CoachingExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label"></label>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Male" checked>
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Female">
                    <label class="form-check-label">Female</label>
                </div>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoFile" class="form-label"></label>
                <img class="" src="@Model.ProfilePicture" />
                <input asp-for="PhotoFile" type="file" class="form-control-file" accept="image/*" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group text-center"> 
        <button asp-area="" asp-controller="User" asp-action="RegisterCoach" class="btn btn-register">Sign in</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






