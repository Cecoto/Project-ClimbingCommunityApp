@model RegisterClimberViewModel

<link rel="stylesheet" href="~/css/RegisterView.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Register climber";
}


<h2 class="centered-heading">Register as a Climber</h2>
<form asp-action="RegisterClimber" method="post" enctype="multipart/form-data" class="register-form">
    
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" placeholder="Enter your age" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClimbingExperience" class="form-label"></label>
                <input asp-for="ClimbingExperience" class="form-control" placeholder="Enter your climbing experience" />
                <span asp-validation-for="@Model.ClimbingExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelId" class="form-label"></label>
                <select asp-for="LevelId" asp-items="@(new SelectList(Model.Levels, "Id", "Name"))" class="form-control">
                    <option value="">Select a level</option>
                </select>
                <span asp-validation-for="@Model.LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClimberSpecialityId" class="form-label"></label>
                <select asp-for="ClimberSpecialityId" asp-items="@(new SelectList(Model.ClimberSpecialities, "Id", "Name"))" class="form-control">
                    <option value="">Select a speciality</option>
                </select>
                <span asp-validation-for="@Model.ClimberSpecialityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label"></label>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Male" checked />
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Female" />
                    <label class="form-check-label">Female</label>
                </div>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoFile" class="form-label"></label>
                <img class="" src="@Model.ProfilePicture" />
                <input asp-for="PhotoFile" type="file" class="form-control-file" accept="image/*" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        <button asp-area="" asp-controller="User" asp-action="RegisterClimber" class="btn btn-register">Sign in</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

