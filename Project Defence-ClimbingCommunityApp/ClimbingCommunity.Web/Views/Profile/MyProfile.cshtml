@model ClimberProfileViewModel

@{
    ViewData["Title"] = "Profile Page";
}

<div class="profile-container">
    <div class="profile-picture">
        <img src="@Model.ProfilePicture" alt="Profile Picture" />
    </div>
    <div class="profile-details">
        <h2>@Model.FirstName @Model.LastName</h2>
        <p>Gender: @Model.Gender</p>
        <p>Type of User: @Model.TypeOfUser</p>
        <p>Speciality: @Model.Speciality</p>
        <p>Climbing Experience: @Model.ClimbingExperience</p>
    </div>
    <div class="profile-actions">
        <a class="btn btn-primary" asp-action="ManageProfile" asp-route-id="@Model.Id">Manage Profile</a>
    </div>
</div>
