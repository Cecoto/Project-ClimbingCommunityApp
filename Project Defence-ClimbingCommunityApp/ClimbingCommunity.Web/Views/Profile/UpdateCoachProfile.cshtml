@model UpdateCoachProfileViewModel

@{
    ViewData["Title"] = "Update coach profile";
}
<link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />



<h1 class="centered-heading">Manage Profile</h1>
<hr />
<div class="form-container">
    <form asp-action="UpdateCoachProfile" method="post" enctype="multipart/form-data" class="form">
        <div class="form-group">
            <label asp-for="PhotoFile">Profile Picture</label>
            <div class="profile-picture">
                <img src="@Model.ProfilePictureUrl" alt="" />
            </div>
            <span>Change profile picture</span>
            <input type="file" name="PhotoFile" class="form-control" />
            <span asp-validation-for="PhotoFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CoachingExperience" class="form-label">Coaching Experience (years)</label>
            <input asp-for="CoachingExperience" class="form-control" />
            <span asp-validation-for="CoachingExperience" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>


        <button type="submit" class="btn-form" asp-controller="Profile" asp-action="UpdateCoachProfile">Update Profile</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}